{
  "name": "typescript-action",
  "version": "0.0.0",
  "description": "GitHub Actions with TypeScript",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier 'src/**/*.ts' --write",
    "format-check": "prettier 'src/**/*.ts' --check",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanaytug/typescript-action.git"
  },
  "author": "AytuÄŸ HAN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hanaytug/typescript-action/issues"
  },
  "homepage": "https://github.com/hanaytug/typescript-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.13",
    "@typescript-eslint/parser": "^5.46.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.29.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.1.6",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
